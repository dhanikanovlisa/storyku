generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Stories {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  synopsis  String
  caterogy  String
  status    String
  cover     String
  keyword   String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Chapters  Chapters[]
}

model Chapters {
  id        Int      @id @default(autoincrement())
  title     String
  story   String
  storyId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Stories   Stories  @relation(fields: [storyId], references: [id])
}